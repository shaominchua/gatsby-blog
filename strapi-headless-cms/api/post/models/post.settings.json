{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "content": {
      "type": "richtext",
      "required": true
    },
    "media": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "category": {
      "model": "category",
      "via": "post"
    },
    "title": {
      "type": "string"
    },
    "language": {
      "type": "string"
    },
    "postUniqueIdentifier": {
      "type": "uid",
      "targetField": "title"
    },
    "blogSeries": {
      "model": "seriess",
      "via": "posts"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "previewImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "previewText": {
      "type": "string"
    },
    "subtitle": {
      "type": "string"
    },
    "readLength": {
      "type": "string"
    },
    "relatedPosts": {
      "collection": "post",
      "via": "posts",
      "dominant": true
    },
    "posts": {
      "collection": "post",
      "via": "relatedPosts"
    }
  }
}
